<Page x:Class="Pract44WPF.ChangeTestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pract44WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ChangeTestPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <DataGrid Background="#FFC2C2C2" x:Name="updated_test_datagrid" Grid.Row="0" Grid.ColumnSpan="3" VerticalAlignment="Top" HorizontalAlignment="Center" Width="800"/>
        <Button x:Name="AddNewStringButton" Grid.Column="0" Grid.Row="1" Content="Добавить строку" Click="AddNewStringButton_OnClick" Background="#FF9A94DA"/>
        <Button x:Name="DeleteStringButton" Grid.Column="1" Grid.Row="1" Content="Удалить строку" Click="DeleteStringButton_OnClick" Background="#FF9A94DA" />
        <Button x:Name="SaveStringsButton" Grid.Column="2" Grid.Row="1" Content="Сохранить изменения" Click="SaveStringsButton_OnClick" Background="#FF9A94DA" />
    </Grid>
</Page>
